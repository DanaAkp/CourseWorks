                        </StackPanel>
                        <StackPanel>
                            <TextBlock Text="     "/>
                        </StackPanel>
                        <StackPanel x:Name="stpRegrIntervY_">
                            <TextBlock HorizontalAlignment="Center"  Text="Интервальные оценки"/>
                        </StackPanel>
                    </StackPanel>
                </ScrollViewer>
            </Grid>

        </TabItem>
        <TabItem>
            <TextBox x:Name="tb"/>
        </TabItem>
    </TabControl>
</Window>
